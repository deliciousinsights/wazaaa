mixin navlink(linkUrl, glyph, label)
  li(class= url.startsWith(linkUrl) ? 'active' : null)
    a(href=linkUrl)
      i.glyphicon(class=`glyphicon-${glyph}`)
      = ' ' + label

mixin tagField(id)
